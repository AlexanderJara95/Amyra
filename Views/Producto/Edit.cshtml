@model Amyra.Models.Producto

@{
    ViewData["Title"] = "Editar";
}
<div class="row">
    <div class="col-sm-6 p-5 mb-4 bg-body-tertiary rounded-3" style="background-color: #f1f1f1;">
        <div class="row text-center">
            <h1>Editar</h1>
            <h4 class="text-muted pb-2">Producto</h4>
        </div>
        <div class="row">
            <div class="col-md-12">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label fw-bold"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descripcion" class="control-label fw-bold"></label>
                        <input asp-for="Descripcion" class="form-control" />
                        <span asp-validation-for="Descripcion" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Precio" class="control-label fw-bold"></label>
                        <input asp-for="Precio" class="form-control" type="number"/>
                        <span asp-validation-for="Precio" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="PorcentajeDescuento" class="control-label fw-bold"></label>
                        <input asp-for="PorcentajeDescuento" class="form-control" />
                        <span asp-validation-for="PorcentajeDescuento" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="ImageName" class="control-label fw-bold"></label>
                        <input asp-for="ImageName" class="form-control" />
                        <span asp-validation-for="ImageName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Status" class="control-label fw-bold"></label>
                        <input asp-for="Status" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <span style="margin-right: 2px;"></span> <!-- Espacio entre botones -->
                    <div class="form-group">
                        <div class="btn-group">
                        <input type="submit" value="Guardar" class="btn btn-custom"/> 
                        <a asp-action="Index" class="btn btn-custom2" style="margin-left: 5px;">Volver</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>    
    <div class="col-sm-6 p-5 mb-4 bg-body-tertiary rounded-3">
        <div class="">
            <img class="img-fluid" src="https://peru21.pe/resizer/QZqTWIO312BJf2_PIjgcrcOYKdg=/1200x800/smart/filters:format(jpeg):quality(75)/cloudfront-us-east-1.images.arcpublishing.com/elcomercio/LWIWWX4J5VBLROBEWG5524P2XQ.jpeg" alt="Imagen de ejemplo">
        </div>
    </div>
</div>
@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<style>
    .btn-custom {
        background-color: #f1a64f;
        color: #000000;
    }

    .btn-custom2 {
        background-color: #bdbdbd;
        color: #000000;
    }
</style>