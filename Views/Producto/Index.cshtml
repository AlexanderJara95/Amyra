@model IEnumerable<Amyra.Models.Producto>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a href="@Url.Action("Create")" class="btn btn-custom">Crear Nuevo</a>
</p>
<table class="table">
    <thead style="background-color: #ac8b65;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PorcentajeDescuento)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImageName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody style="background-color: #ffdeb9">
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Precio)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.PorcentajeDescuento)
            </td>
            <td class="align-middle text-center">
                <img src='@Html.DisplayFor(modelItem => item.ImageName)' width="150">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td class="align-middle text-center">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-marron" title="Editar"><i class="bi bi-pencil-square"></i></a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-plomo btn-spacing my-2" title="Detalle"><i class="bi bi-eye"></i></a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger btn-spacing" title="Eliminar"><i class="bi bi-trash3"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>

<style>
    .btn-custom {
        background-color: #f1a64f;
        color: #000000;
        margin-right: 10px;
    }

    .btn-custom2 {
        background-color: #bdbdbd;
        color: #000000;
        margin-right: 10px;
    }
</style>