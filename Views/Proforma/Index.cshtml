@model dynamic;
@using System.Collections.Generic;

@{
    ViewData["Title"] = "Carrito de Compras";
    IEnumerable<Amyra.Models.Proforma> listItemsCarrito = new List<Proforma>();
    listItemsCarrito = @Model.elementosCarrito;
    Decimal montoTotal = @Model.montoTotal;
}

<h1 style="text-align: center;">@ViewData["Title"]</h1>

<table class="table" style="border: 1px solid #ccc; border-spacing: 0; margin-bottom: 20px;">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Proforma item in Model.elementosCarrito)
        {
            <tr>
                <td>
                    <div class="product-item">
                       <img src="@item.Producto.ImageName" alt="@item.Producto.Name" class="product-image" /> 
                        <div class="product-details">
                            <h5>@item.Producto.Name</h5>
                        </div>
                    </div>
                </td>
                <td>@item.Cantidad</td>
                <td>@item.Precio</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Agregar</a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Eliminar</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center align-items-center flex-column">
    <div class="mb-3">
        <a class="btn btn-custom" asp-controller="Pago" asp-action="Create" asp-route-monto="@montoTotal">Pagar Total</a>
    </div>
    <div>
        <a class="btn btn-custom2" asp-controller="Carrito" asp-action="LimpiarCarrito">Limpiar Carrito</a> 
    </div>
</div>

<p class="text-center">Total S/. @montoTotal</p>

<style>
    .product-item {
        display: flex;
        align-items: center;
    }

    .product-image {
        width: 80px;
        height: 80px;
        object-fit: cover;
        margin-right: 10px;
    }

    .product-details h5 {
        margin: 0;
        font-size: 18px;
    }

    .btn-custom {
        background-color: #f1a64f;
        color: #000000;
    }

    .btn-custom2 {
        background-color: #bdbdbd;
        color: #000000;
    }
</style>
