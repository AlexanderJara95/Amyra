@model Amyra.Models.Pago

@{
    ViewData["Title"] = "Gracias por su compra";
    
    // Obtener la información de ubicación desde ViewData
    string direccion = ViewData["direccion"] as string;
    string ciudad = ViewData["ciudad"] as string;
    string departamento = ViewData["departamento"] as string;
    string pais = ViewData["pais"] as string;
}

<style>
    body {
        background-color: #f8f9fa;
    }

    
    h1 {
        text-align: center;
        margin-bottom: 40px;
    }

    .form-group {
        margin-bottom: 15px;
    }

    label {
        font-weight: bold;
    }

    .col-sm-2 {
        width: 16.67%;
    }


    .btn-primary {
        padding: 12px 30px;
        font-size: 16px;
        border-radius: 10px;
        background-color: #007bff;
        border-color: #007bff;
    }

    .btn-primary:hover {
        background-color: #0069d9;
        border-color: #0062cc;
    }

    .error-message {
        color: red;
        margin-top: 5px;
    }

    .image-container {
        display: flex;
        justify-content: center;
        align-items: center;
        margin-left: 20px;
    }

    .image-container img {
        width: 100%;
        max-width: 400px;
        border-radius: 10px;
    }
    .bg-body-tertiary{
        border: 1px solid #a8a8a8;
    }
</style>

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="h-100">
        <div class="col-sm-12 p-5 mb-4 bg-body-tertiary rounded-3 d-flex justify-content-center">
            <h2 class="text-success text-center">El pago se ha registrado y su pedido nro 74 esta en camino</h2>
            <div class="image-container pb-3">
                <img src="https://peru21.pe/resizer/QZqTWIO312BJf2_PIjgcrcOYKdg=/1200x800/smart/filters:format(jpeg):quality(75)/cloudfront-us-east-1.images.arcpublishing.com/elcomercio/LWIWWX4J5VBLROBEWG5524P2XQ.jpeg" alt="Imagen de ejemplo">
            </div>
        </div>
    </div>
</div>